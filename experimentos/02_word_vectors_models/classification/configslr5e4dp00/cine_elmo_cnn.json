{
    "dataset": "cine",
    "model": {
        "name": "cnn",
        "embeddings": "elmo",
        "n_filters": 8,
        "filter_sizes": [3, 5, 7],
        "elmo_batch_size": 64,
        "dropout": 0.0
    },
    "tokenizer": {
        "name": "elmo_tokenizer",
        "max_sent_len": 256,
        "pad_token": "[PAD]"
    },
    "train_kwargs": {
        "max_epochs": 500,
        "train_batch_size": 32,
        "dev_batch_size": 64,
        "learning_rate": 5e-4,
        "patience": 10,
        "train_eval_every": 50,
        "dev_eval_every": 500,
        "device": "cuda:1"
    }
}