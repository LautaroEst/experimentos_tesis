{
    "dataset": "cine",
    "model": {
        "name": "cbow",
        "embeddings": "elmo",
        "hidden_sizes": [300, 200, 100, 50],
        "elmo_batch_size": 64,
        "dropout": 0.1
    },
    "tokenizer": {
        "name": "elmo_tokenizer",
        "max_sent_len": 512,
        "pad_token": "[PAD]"
    },
    "train_kwargs": {
        "max_epochs": 500,
        "train_batch_size": 32,
        "dev_batch_size": 64,
        "learning_rate": 5e-4,
        "patience": 10,
        "train_eval_every": 50,
        "dev_eval_every": 500,
        "device": "cuda:1"
    }
}