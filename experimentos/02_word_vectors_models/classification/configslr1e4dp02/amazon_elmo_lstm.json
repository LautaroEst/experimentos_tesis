{
    "dataset": "amazon",
    "model": {
        "name": "lstm",
        "embeddings": "elmo",
        "hidden_size": 200,
        "elmo_batch_size": 64,
        "dropout": 0.2
    },
    "tokenizer": {
        "name": "elmo_tokenizer",
        "max_sent_len": 512,
        "pad_token": "[PAD]"
    },
    "train_kwargs": {
        "max_epochs": 50,
        "train_batch_size": 32,
        "dev_batch_size": 64,
        "learning_rate": 1e-4,
        "patience": 10,
        "train_eval_every": 100,
        "dev_eval_every": 1000,
        "device": "cuda:1"
    }
}