{
    "dataset": "melisa",
    "devsize": 0.05,
    "model": {
        "name": "lstm",
        "embedding_dim": 20,
        "hidden_size": 10,
        "dropout": 0.0
    },
    "src_tokenizer": {
        "name": "word_tokenizer",
        "freq_cutoff": 1,
        "max_tokens": 60000,
        "max_sent_len": 512,
        "pad_token": "[PAD]",
        "unk_token": "[UNK]",
        "start_token": "[BOS]",
        "end_token": "[EOS]"
    },
    "tgt_tokenizer": {
        "name": "word_tokenizer",
        "freq_cutoff": 1,
        "max_tokens": 60000,
        "max_sent_len": 512,
        "pad_token": "[PAD]",
        "unk_token": "[UNK]",
        "start_token": "[BOS]",
        "end_token": "[EOS]"
    },
    "train_kwargs": {
        "max_epochs": 10,
        "train_batch_size": 128,
        "dev_batch_size": 256,
        "learning_rate": 0.001,
        "patience": 3,
        "train_eval_every": 100,
        "dev_eval_every": 1000
    }
}